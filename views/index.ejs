<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" placeholder="Title Goes Here" class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none" name="title">
                <textarea placeholder="Write your task details here..." class="block px-5 py-2 resize-none bg-zinc-800 mt-2 w-full rounded-md outline-none" name="details"></textarea>
                <input type="submit" value="Create Task" class="mt-2 bg-blue-600 px-5 py-2 rounded-md">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white tracking-tighter text-3xl"><%= val %></h1>
                        <div class="flex justify-between w-full items-center mt-3">
                            <a href="/file/<%= val %> " class="text-blue-500 inline-block">Read More...</a>
                        <a href="/edit/<%=  val %>" class="text-zinc-500">edit</a>
                        </div>
                       </div>
                <% }) %>
          <%  } else { %>
            <h3 class="text-zinc-600">No Task yet...</h3>
         <% } %>
        </div>
    </div>
</body>
</html>